    tlv( 1, uint8(2) ),
        tlv( 3, uint16(11) ),
	tlv( 5, uint8(10) ),
	tlv( 6, uint8(1) ),
	tlv( 9,
	    tlv( 3, ip('0.0.0.0') ),
	    tlv( 4, ip('0.0.0.0') ),
	    tlv( 5, ip('10.0.0.0') ),
	    tlv( 6, ip('255.0.0.0') )))

