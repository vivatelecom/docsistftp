#
# ISC DHCP filename configuration:
#
# filename = concat(
#    "cm.anko?mac=",
#    suffix(concat ("0", binary-to-ascii (16, 8, "", substring (hardware, 1, 1))),2),
#    suffix(concat ("0", binary-to-ascii (16, 8, "", substring (hardware, 2, 1))),2),
#    suffix(concat ("0", binary-to-ascii (16, 8, "", substring (hardware, 3, 1))),2),
#    suffix(concat ("0", binary-to-ascii (16, 8, "", substring (hardware, 4, 1))),2),
#    suffix(concat ("0", binary-to-ascii (16, 8, "", substring (hardware, 5, 1))),2),
#    suffix(concat ("0", binary-to-ascii (16, 8, "", substring (hardware, 6, 1))),2),
#    "&model=",
#    pick-first-value(option SA.modnum, "none"),
#    "&hwver=",
#    pick-first-value(option SA.hwver, "none")
#    );
#

config_type = 'cm'
modem = sql_row("SELECT * FROM v_tftp_cm WHERE hfc_mac=$1", query.Get("mac"))
model = query.Get("model")
hwver = query.Get("hwver")


tlv_add( 3, uint8(modem["active"]) )
tlv_add( 18, uint8(30) )
tlv_add( 29, uint8(1) )

tlv_add( 22,
    tlv( 1, uint8(1) ),
    tlv( 3, uint16(12) ),
    tlv( 5, uint8(10) ),
    tlv( 6, uint8(1) ),
        tlv( 9,
	tlv( 3, ip('10.0.0.0') ),
	tlv( 4, ip('255.0.0.0') ),
	tlv( 5, ip('0.0.0.0') ),
	tlv( 6, ip('0.0.0.0') )))

