	tlv_add( 11, snmp('1.3.6.1.4.1.1429.79.2.2.2.1.1.3.112', modem["wifi_essid"] ) )
	tlv_add( 11, snmp('1.3.6.1.4.1.1429.79.2.2.3.1.1.2.112', modem["wifi_password"] ) )

